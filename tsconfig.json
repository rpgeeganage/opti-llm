{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/config/*": ["config/*"],
      "@/services/*": ["services/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}
